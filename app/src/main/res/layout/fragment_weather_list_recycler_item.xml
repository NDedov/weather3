<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cityName"
        tools:text="Москва"
        android:gravity="center"
        android:layout_marginTop="@dimen/little_margin"
        android:layout_marginBottom="@dimen/little_margin"
        android:textSize="@dimen/city_list_name_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_divider_height"
        android:layout_marginStart="@dimen/margin_recycler_divider"
        android:layout_marginEnd="@dimen/margin_recycler_divider"
        android:background="@color/grey"/>

</LinearLayout>
